# CORTEX v3.0 Environment Configuration

# Size Limits (percentages)
CORE_LIMIT_PERCENT=7
CACHE_LIMIT_PERCENT=2
TOTAL_LIMIT_PERCENT=9

# Trigger Thresholds
CACHE_WARNING_PERCENT=1.5
CACHE_CRITICAL_PERCENT=2.0
CORE_CRITICAL_PERCENT=7.0

# Timeouts (seconds)
PROCESSING_TIMEOUT=10
AUTOSAVE_INTERVAL=300

# File Size Limits (MB)
MAX_FILE_SIZE_MB=10

# Performance Settings
MAX_PARALLEL_PROCESSING=4
REFLEX_MONITOR_INTERVAL=30
CACHE_CLEANUP_INTERVAL=10

# API Settings
API_TOKEN=your-secret-token-here
WEBHOOK_URL=https://your-webhook-url.com/alerts

# Dashboard Settings
DASHBOARD_REFRESH_INTERVAL=5000
DASHBOARD_PORT=8000

# GitHub Integration
GITHUB_TOKEN=your-github-token
TARGET_REPOS=cortex-memory,cortex-active,cortex-archive,project-repos